{
  "manifest_version": 2,

  "name": "WikiWipe",
  "description": "This extension attempts to remove wikipedia information",
  "version": "0.8",
  "background": {
    "scripts": ["jquery.js", "serverconstants.js", "background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.google.com/*"],
      "js": ["jquery.js", "serverconstants.js", "wikipurge.js"],
      "css": ["hide.css"]
    },
    {
      "matches": ["*://*.wikipedia.org/*"],
      "js": ["jquery.js", "serverconstants.js", "wikirecord.js"]
    }
  ],
  "omnibox": {"keyword": "*"},
  "permissions": [
    "activeTab",
    "storage"
  ]
}